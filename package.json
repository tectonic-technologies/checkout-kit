{
  "name": "@tectonic-technologies/checkout-kit",
  "version": "0.0.0",
  "description": "A capacitor plugin for Shopify Checkout Kit",
  "main": "dist/plugin.cjs.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "unpkg": "dist/plugin.js",
  "files": [
    "android/src/main/",
    "android/build.gradle",
    "dist/",
    "ios/Sources",
    "ios/Tests",
    "Package.swift",
    "TectonicTechnologiesCheckoutKit.podspec"
  ],
  "author": "Tectonic Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tectonic-technologies/checkout-kit.git"
  },
  "bugs": {
    "url": "https://github.com/tectonic-technologies/checkout-kit/issues"
  },
  "keywords": [
    "capacitor",
    "plugin",
    "native"
  ],
  "scripts": {
    "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
    "verify:ios": "xcodebuild -scheme TectonicTechnologiesCheckoutKit -destination generic/platform=iOS",
    "verify:android": "cd android && ./gradlew clean build test && cd ..",
    "verify:web": "npm run build",
    "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
    "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
    "eslint": "eslint . --ext ts",
    "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
    "swiftlint": "node-swiftlint",
    "docgen": "docgen --api TectonicCheckoutKitPlugin --output-readme README.md --output-json dist/docs.json",
    "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
    "clean": "rimraf ./dist",
    "watch": "tsc --watch",
    "release": "npm run build && npm run verify && np",
    "test": "echo 'No tests - Yolo'"
  },
  "devDependencies": {
    "@capacitor/android": "7.0.0",
    "@capacitor/core": "7.0.0",
    "@capacitor/docgen": "0.3.0",
    "@capacitor/ios": "7.0.0",
    "@ionic/swiftlint-config": "2.0.0",
    "@types/node": "24.5.0",
    "eslint": "9.28.0",
    "eslint-config-prettier": "10.1.5",
    "eslint-import-resolver-typescript": "4.4.2",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-only-warn": "1.1.0",
    "eslint-plugin-perfectionist": "4.14.0",
    "eslint-plugin-prettier": "5.4.1",
    "np": "10.2.0",
    "prettier": "3.5.3",
    "rimraf": "6.0.1",
    "rollup": "4.30.1",
    "swiftlint": "2.0.0",
    "typescript": "5.8.3",
    "typescript-eslint": "8.33.1"
  },
  "peerDependencies": {
    "@capacitor/core": ">=7.0.0"
  },
  "swiftlint": "@ionic/swiftlint-config",
  "capacitor": {
    "ios": {
      "src": "ios"
    },
    "android": {
      "src": "android"
    }
  }
}
